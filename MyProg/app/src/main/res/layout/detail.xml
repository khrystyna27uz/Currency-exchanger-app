<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:orientation="vertical">
    <!--<android.support.v7.widget.Toolbar-->
        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:id="@+id/toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="70dp"-->
        <!--android:background="#607D8B" />-->
    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_D"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:id="@+id/rv123"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/nameBank_D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Банк"
                android:textColor="@color/accentColor"
                android:textSize="27sp"
                android:textStyle="bold" />


                <TextView
                    android:id="@+id/Reg_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Область"
                    android:layout_below="@id/nameBank_D"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#0a0106"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/City_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Reg_D"
                    android:text="місто"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#0a0106"
                    android:textSize="15sp"/>



            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/City_D"
                android:gravity="start"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/EditTextTel_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/EditTxtTel_AM"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#0a0106"
                    android:inputType="none"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/mobil_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0663289817"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#0a0106"
                    android:textSize="15sp"/>



            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="true"
                android:layout_below="@id/linearLayout1"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/EditTextAddress_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/EditTxtAdr_AM"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#0a0106"
                    android:textSize="15sp"
                    android:inputType="none" />

                <TextView
                    android:id="@+id/address_D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="address my"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#0a0106"
                    android:textSize="15sp"/>

            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv2"
        android:layout_below="@id/cv_D"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="start"
            android:orientation="horizontal">
        </LinearLayout>

        <TextView
            android:id="@+id/EditTextVal_D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назва валюти:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0a0106"
            android:textSize="14sp"
            android:inputType="none"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/EditTextVal_D"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/EditTextAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Покупка/"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#0a0106"
                android:textSize="14sp"
                android:gravity="end"
                android:inputType="none" />
            <TextView
                android:id="@+id/EditTe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Продаж"
                android:layout_toRightOf="@id/EditTextVal_D"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#0a0106"
                android:textSize="14sp"
                android:gravity="end"
                android:inputType="none" />


        </LinearLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/cv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv1"
        />

    <FrameLayout
        android:id="@+id/flVisibility"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/toolbar"
        android:background="#ccffffff"
        android:visibility="gone">
    </FrameLayout>


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        fab:fab_addButtonColorNormal="@color/accentColor"
        fab:fab_addButtonColorPressed="@color/accentColorLight"
        fab:fab_icon="@drawable/ic_menu"
        fab:fab_labelStyle="@style/menu_labels_style">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/map_AD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_map"
            fab:fab_colorNormal="@color/detailMenu"
            fab:fab_colorPressed="@color/detailMenuDark"
            fab:fab_size="mini"
            fab:fab_title="Карта"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/site_AD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_link"
            fab:fab_colorNormal="@color/detailMenu"
            fab:fab_colorPressed="@color/detailMenuDark"
            fab:fab_size="mini"
            fab:fab_title="Сайт"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/phone_AD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_phone"
            fab:fab_colorNormal="@color/detailMenu"
            fab:fab_colorPressed="@color/detailMenuDark"
            fab:fab_size="mini"
            fab:fab_title="Позвонити"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <!--<include-->
        <!--android:id="@+id/toolbar"-->
        <!--layout="@layout/action_toolbar"/>-->
</RelativeLayout>

