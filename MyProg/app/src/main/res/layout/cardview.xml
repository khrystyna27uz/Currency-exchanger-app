<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/nameBank_CV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="name of bank"
                android:paddingTop="12dp"
                android:paddingLeft="18dp"
                android:textColor="#0a0106"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/region_CV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameBank_CV"
                android:paddingLeft="18dp"
                android:text="region"
                android:textColor="#0a0106"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/city_CV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/region_CV"
                android:text="city"
                android:paddingLeft="18dp"
                android:textColor="#0a0106"
                android:textSize="17sp" />
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="true"
                android:layout_below="@id/city_CV"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/EditTextTel_CV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/EditTxtTel_AM"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#0a0106"
                    android:layout_gravity="bottom"
                    android:inputType="text"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/mobil_CV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0663289817"
                    android:layout_gravity="bottom"
                    android:paddingRight="18dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#0a0106"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_below="@id/linearLayout2"
                android:gravity="end"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/EditTextAddress_CV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/EditTxtAdr_AM"
                    android:layout_gravity="top"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#0a0106"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/address_CV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="18dp"
                    android:text="address my"
                    android:layout_gravity="top"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#0a0106"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/linearLayout1"
                android:background="#c3ccd7"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">


                <Button
                    android:id="@+id/button_web_CV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_link"
                    tools:ignore="ButtonStyle">
                </Button>

                <Button
                    android:id="@+id/button_map_CV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_map"
                    tools:ignore="ButtonStyle"/>

                <Button
                    android:id="@+id/btn_telephone_CV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_phone"
                    tools:ignore="ButtonStyle"/>

                <Button
                    android:id="@+id/btn_details_CV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:layout_weight="1"
                    android:background="@mipmap/ic_next"
                    tools:ignore="ButtonStyle"/>
            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>